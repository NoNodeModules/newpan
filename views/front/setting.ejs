<% layout("layout") %>
    <div class="main_content">
        <div class="mcontainer">
            <div class="profile user-profile bg-white rounded-2xl -mt-4">
                <div class="flex justify-between lg:border-t flex-col-reverse lg:flex-row">
                    <nav class="cd-secondary-nav pl-2 is_ligh -mb-0.5 border-transparent">
                        <ul>
                            <li class="active"><a href="#0"> Kişisel Bilgiler</a></li>
                            <li><a href="#1">Şifre İşlemleri </a></li>
                            <li><a href="#2">Hesap İşlemleri </a></li>
                        </ul>
                    </nav>
                </div>
            </div>
            <div class="lg:flex lg:mt-8 mt-4 lg:space-x-8">
                <div class="grid lg:grid-cols-2 gap-3">
                    <div>
                        <label class="mb-0"> Adınız </label>
                        <input type="text" name="name" placeholder="Adınız" class="bg-gray-100 h-12 mt-2 px-3 rounded-md w-full">
                    </div>
                    <div>
                        <label class="mb-0"> Soyadınız </label>
                        <input type="text" name="surname" placeholder="Soyadınız" class="bg-gray-100 h-12 mt-2 px-3 rounded-md w-full">
                    </div>
                </div>
                <div class="form-group">
                    <label>Doğum Tarihiniz</label>
                    <input name="dt" data-role="datepicker" data-locale="tr-TR">
                </div>
                <div class="uk-form-group">
                    <label for="mb-0"> Cinsiyetiniz</label>
                    <div class="uk-position-relative">
                        <select name="cinsiyet" class="selectpicker uk-input bg-secondary">
                            <option value="">Erkek</option>
                            <option value="">Kadın</option>
                            <option value="">Belirtmek istemiyorum</option>
                        </select>
                    </div>
                </div>
                <div>
                    <label class="mb-0"> Email Adresiniz </label>
                    <input type="email" name="username" placeholder="info@ornek.com" class="bg-gray-100 h-12 mt-2 px-3 rounded-md w-full">
                </div>
                <div class="grid lg:grid-cols-2 gap-3">
                    <div>
                        <label class="mb-0"> Telefon  </label>
                        <input type="text" placeholder="+____ ___ __ __" class="bg-gray-100 h-12 mt-2 px-3 rounded-md w-full">
                    </div>
                </div>
            </div>

        </div>
    </div>