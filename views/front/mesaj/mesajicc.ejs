<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css"
        integrity="sha512-5A8nwdMOWrSz20fDsjczgUidUBR8liPYU+WymTZP1lmY9G6Oc7HlZv156XqnsgNUzTyMefFTcsFH/tnJE/+xBg=="
        crossorigin="anonymous" />
    <script src="https://cdn.jsdelivr.net/npm/vue@2/dist/vue.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.21.1/axios.min.js"
        integrity="sha512-bZS47S7sPOxkjU/4Bt0zrhEtWx0y0CRkhEp8IckzK+ltifIIE9EMIMTuT/mEzoIMewUINruDBIR/jJnbguonqQ=="
        crossorigin="anonymous"></script>
</head>

<style>
    textarea {
  box-sizing: border-box;
  resize: none;
}
</style>

<body>
    <div class="container bootstrap snippets bootdeys" id="app">
        <div class="col-md-7 col-xs-12 col-md-offset-2">
            <div class="panel" id="chat">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        <h3 class="text-center">
                            <a href="/mesaj"><i style="float: left;" class="fa fa-chevron-left"
                                    aria-hidden="true"></i></a>
                            Ad Soyad
                        </h3>
                    </h3>
                </div>
                <hr>
                <div class="panel-body" id="scrollChat" style="width: 100%; height: 82vh; overflow: scroll;">
                    <div class="chats" v-for="item in messages">
                        <div class="chat" v-if="item.user._id == '<%= user._id %>'" style="margin-top: -30px;">
                            <div class="chat-body">
                                <div class="chat-content" style="border-radius: 40px;">
                                    <p>
                                        {{item.text}}
                                    </p>
                                <span style="margin-top: -22px;" class="chat-time"><small>1 saniye önce</small></span>
                                </div>
                            </div>
                        </div>
                        <div class="chat chat-left" v-else style="margin-top: -20px;">
                            <div class="chat-body">
                                <div class="chat-content" style="border-radius: 40px;">
                                    <p>
                                        {{item.text}}
                                    </p>
                                <span style="margin-top: -22px;" class="chat-time"><small>1 saniye önce</small></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel-footer fixed-bottom">
                    <hr>
                    <form>
                        <div class="input-group">
                            <textarea type="text" v-model="text" style="border-radius: 30px;"
                                class="form-control" placeholder="Mesajınız giriniz.." data-autoresize rows="1"></textarea>
                            <span class="input-group-btn">
                                <button class="btn" @click="mesajGonder()" style="border-radius: 100px;" type="button">
                                    <i class="fa fa-chevron-right fa-2x" style="color: #62a8ea;"></i>
                                </button>
                            </span>
                        </div>
                    </form>
                </div>
            </div>
            <!-- End Panel Chat -->
        </div>
    </div>

    <script>
        new Vue({
            el: "#app",
            data: {
                text: null,
                messages: null
            },
            methods: {
                mesajGonder() {
                    axios.post("/sendmessage", {
                        mid: '<%= mesaj._id %>',
                        text: this.text
                    }).then(response => {
                        if (response.data.status == true) {
                            this.text = ""
                        } else {
                            alert("Mesaj gönderiminde bir hata oluştu.")
                        }
                    })
                },
                chatgetir() {
                    axios.post("/chatgetir", {
                        mid: '<%= mesaj._id %>'
                    }).then(response => {
                        if (response.data.status == true) {
                            this.messages = response.data.chat
                        } else {
                            this.messages = response.data.chat
                        }
                    })
                }
            },
            created() {
                setInterval(() => {
                    this.chatgetir()
                }, 1000);

                setInterval(() => {
                    $('#scrollChat').animate({
                        scrollTop: $('#scrollChat')[0].scrollHeight
                    }, "slow");
                }, 1100);
            }
        })
    </script>

    <script>
        jQuery.each(jQuery('textarea[data-autoresize]'), function () {
            var offset = this.offsetHeight - this.clientHeight;

            var resizeTextarea = function (el) {
                jQuery(el).css('height', 'auto').css('height', el.scrollHeight + offset);
            };
            jQuery(this).on('keyup input', function () { resizeTextarea(this); }).removeAttr('data-autoresize');
        });
    </script>

    <style>
        body {
            background: white;
            margin-top: 10px;
        }

        .chat-box {
            height: 100%;
            width: 100%;
            background-color: #fff;
            overflow: hidden
        }

        .chats {
            padding: 22px 9px
        }

        .chat-body {
            display: block;
            margin: 10px 30px 0 0;
            overflow: hidden
        }

        .chat-body:first-child {
            margin-top: 0
        }

        .chat-content {
            position: relative;
            display: block;
            float: right;
            padding: 8px 15px;
            margin: 0 10px 5px 0;
            clear: both;
            color: #fff;
            background-color: #62a8ea;
            border-radius: 4px;
            -webkit-box-shadow: 0 1px 4px 0 rgba(0, 0, 0, 0.37);
            box-shadow: 0 1px 4px 0 rgba(0, 0, 0, 0.37);
        }


        .chat-content>p:last-child {
            margin-bottom: 0
        }


        .chat-time {
            display: block;
            margin-top: 8px;
            color: rgba(255, 255, 255, .6)
        }

        .chat-left .chat-avatar {
            float: left
        }

        .chat-left .chat-body {
            margin-right: 0;
            margin-left: 30px
        }

        .chat-left .chat-content {
            float: left;
            margin: 0 0 10px 20px;
            color: #76838f;
            background-color: #dfe9ef
        }

        .chat-left .chat-time {
            color: #a3afb7
        }

        .panel-footer {
            padding: 0 30px 15px;
            background-color: transparent;
            border-top: 1px solid transparent;
            border-bottom-right-radius: 3px;
            border-bottom-left-radius: 3px;
        }

        .avatar img {
            width: 100%;
            max-width: 100%;
            height: auto;
            border: 0 none;
            border-radius: 1000px;
        }

        .chat-avatar .avatar {
            width: 30px;
        }

        .avatar {
            position: relative;
            display: inline-block;
            width: 40px;
            white-space: nowrap;
            border-radius: 1000px;
            vertical-align: bottom;
        }
    </style>

</body>

</html>