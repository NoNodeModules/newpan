<% layout("layout") %>
<%- include ./part/headerflex.ejs %> 

    <div class="main_content">
        <div class="mcontainer">
            <% bildirim.forEach(element => { %>
                <div style="display: flex; flex-direction: row; padding-top: 4px;">
                    <div style="flex:1; align-items: center; justify-content: center; padding-left: 5vw; padding-top: 3px;">
                        <ion-icon name="chatbubble-ellipses-outline" class="text-2xl"></ion-icon>
                    </div>
                    <div style="flex:12">
                        <img src="<%= element.user.photo %>" style="border-radius: 50px; margin-bottom: 6px; height: 40px;">
                        <p style="margin-top: -11px;"> <a href="<%= element.url %>"><b>Sistem mesajı</b> <%= element.title %></a> </p>
                        <p style="line-height: 1.2;"> <small> <%= element.title %> </small> </p>
                    </div>
                </div>
                <hr>
                <div style="display: flex; flex-direction: row; padding-top: 4px;">
                    <div style="flex:1; align-items: center; justify-content: center; padding-left: 5vw; padding-top: 3px;">
                        <ion-icon class="text-2xl" name="heart-outline"></ion-icon>
                    </div>
                    <div style="flex:12">
                        <img src="<%= user.photo %>" style="border-radius: 50px; margin-bottom: 6px; height: 40px;">
                        <p style="margin-top: -11px;"> <a href=""><b>deneme kişisi beğendi </b> </a> </p>
                        <p style="line-height: 1.2;"> <small> Deneme </small> </p>
                    </div>
                </div>
                <hr>
            <% }) %>
        </div>
    </div>
    <footer>
        <% if (user) { %>
            <div style="flex: 2; align-items: center; justify-content: center;">
                <a href="/profil"><img src="<%= user.photo %>" style="height: 33px; top: 0px; bottom: 0px; left: 0px; right: 0px; margin:auto; border-radius: 20px;">            </a>
            </div>
        <% }else{ %>
            <div style="flex: 2; align-items: center; justify-content: center;">
                <a href="/users/login"><ion-icon name="person-outline" style="color: gray;" class="text-3xl"></ion-icon></a>
            </div>
        <% } %> 
        <div style="flex: 2; align-items: center; justify-content: center;">
            <a href="/medya"><ion-icon name="camera-outline" style="color: gray;" class="text-4xl"></ion-icon></a>
        </div>
        <% if (user) { %>
            <% if (user.type == 1 && title == 1) { %>
                <div style="flex: 2; align-items: center; justify-content: center;" uk-toggle="target: #create-post-modal">
                    <img src="../../../paylas.png" style="height: 40px; top: 0px; bottom: 0px; left: 0px; right: 0px; margin:auto; margin-bottom: 4px;">
                </div>
            <% }else{ %>
                <div style="flex: 2; align-items: center; justify-content: center;" uk-toggle="target: #create-post-modal">
                    <img src="../../../paylas.png" style="height: 40px; top: 0px; bottom: 0px; left: 0px; right: 0px; margin:auto; margin-bottom: 4px;">
                </div>
            <% } %> 
        <% }else{ %>
    
        <% } %> 
        <div style="flex: 2; align-items: center; justify-content: center;">
            <a href="/bildirim"><ion-icon name="notifications-outline" style="color: gray;" class="text-4xl"></ion-icon></a>
        </div>
        <div style="flex: 2; align-items: center; justify-content: center;">
            <a href="/mesaj"><ion-icon name="chatbubble-outline" style="color: gray;" class="text-4xl"></ion-icon></a>
        </div>
    </footer>